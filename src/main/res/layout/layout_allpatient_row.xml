<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin10"
        app:cardElevation="@dimen/margin5"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin10"
                android:drawableLeft="@drawable/ic_patient_20dp"
                android:drawablePadding="@dimen/margin10"
                android:drawableTint="@color/colorPrimaryDark"
                android:text="Santosh"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="@dimen/margin10"
                android:drawableTint="@color/colorPrimaryDark"
                android:text="789456123"
                android:textColor="@color/black"
                android:textSize="@dimen/margin15" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:text="pune"
                android:drawableLeft="@drawable/ic_address"
                android:drawablePadding="@dimen/margin10"
                android:drawableTint="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/margin10"
                android:textSize="@dimen/margin15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin10">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_edit"
                    android:src="@drawable/ic_edit"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="@dimen/margin5"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_rx"
                    android:src="@drawable/ic_rx"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_margin="@dimen/margin5"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_trash"
                    android:src="@drawable/ic_trash"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>